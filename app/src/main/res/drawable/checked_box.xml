<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list xmlns:android="http://schemas.android.com/apk/res/android">
            <item>
                <shape android:shape="oval">
                    <size
                        android:width="44dp"
                        android:height="44dp" />
                    <gradient android:angle="135"
                        android:startColor="#F00B51"
                        android:endColor="#7366FF"/>
                </shape>
            </item>
            <item>
                <bitmap  android:tint="@color/white" android:src="@drawable/ic_check">
                </bitmap>
            </item>
        </layer-list>
    </item>
</selector>